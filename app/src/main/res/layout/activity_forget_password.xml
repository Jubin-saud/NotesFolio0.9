<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgetPasswordActivity">


    <ImageView
        android:id="@+id/forgotpassimg"
        android:layout_width="@dimen/_250mdp"
        android:layout_height="@dimen/_200mdp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/_30mdp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forgtpass" />

    <TextView
        android:id="@+id/forgotpasstxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/alata"
        android:text="Enter email id of your account"
        android:textAlignment="textStart"
        android:textColor="@color/myblue"
        android:textSize="@dimen/_20font_mdp"
        app:layout_constraintEnd_toEndOf="@+id/forgotpassimg"
        app:layout_constraintStart_toStartOf="@+id/forgotpassimg"
        app:layout_constraintTop_toBottomOf="@+id/forgotpassimg" />

    <EditText
        android:id="@+id/forget_email"
        android:layout_width="0dp"
        android:layout_height="@dimen/_50mdp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/forgotpasstxt"
        app:layout_constraintStart_toStartOf="@+id/forgotpasstxt"
        app:layout_constraintTop_toBottomOf="@+id/forgotpasstxt" />

    <Button
        android:id="@+id/forget_button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_85mdp"
        android:text="Forget Password"
        android:textAlignment="center"
        android:textColor="@color/myblue"
        android:textSize="@dimen/_18font_mdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/forget_email"
        app:layout_constraintStart_toStartOf="@+id/forget_email"
        app:layout_constraintTop_toBottomOf="@+id/forget_email" />
</androidx.constraintlayout.widget.ConstraintLayout>